    unsigned int points;
    int totalQuestions;
    int correctAnswers;
    int *decimals;
    int decimalCount;
    const int ARRAY_SIZE;

    // Constructor 
    GameState() : points(0), totalQuestions(0), correctAnswers(0),
                  decimalCount(0), ARRAY_SIZE(3)
    {
        decimals = new int[ARRAY_SIZE];
    }

    // Destructor 
    ~GameState()
    {
        delete[] decimals;
    }
};

int main()
{
    srand(time(0));

    GameState game;

    initializeGame(game);

    bool continueGame;
    do
    {
        continueGame = playGameRound(game);
    } while (continueGame);

    finalizeGame(game);
    return 0;
}

